<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/dialog_holo_light_frame"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mainLyt"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <View
            android:id="@+id/statusStick"
            android:layout_width="7dp"
            android:layout_height="wrap_content"
            android:background="@color/colorRedBar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="9dp"
            android:layout_marginBottom="9dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:layout_weight="8.2">

                    <ImageView
                        android:id="@+id/vehicleTypeImg"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/v0" />

                    <TextView
                        android:id="@+id/txtVw_mileage"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="6dp"
                        android:singleLine="true"
                        android:text="54.5 kms/ltr"
                        android:textColor="@color/colorBlack"
                        android:textSize="22sp" />

                    <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="bottom"-->
                    <!--android:singleLine="true"-->
                    <!--android:text="@string/kms_per_ltr"-->
                    <!--android:textColor="@color/colorBlack"-->
                    <!--android:textSize="16sp" />-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="right|bottom">

                    <TextView
                        android:id="@+id/txtVw_distanceTravelled"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:singleLine="true"
                        android:text="1000 kms"
                        android:textColor="@color/colorBlack"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/deleteBtn"
                        android:paddingStart="3dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.3"
                        android:paddingEnd="6dp"
                        android:src="@drawable/delete_icon" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:layout_marginTop="18dp">

                <TextView
                    android:id="@+id/txtVw_rupees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="6dp"
                    android:gravity="left"
                    android:maxEms="5"
                    android:singleLine="true"
                    android:text="\u20B9500.5"
                    android:textColor="@color/colorGray"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:paddingEnd="26dp">

                    <TextView
                        android:id="@+id/txtVw_litresOfPetrol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxEms="4"
                        android:singleLine="true"
                        android:text="3.5ltrs"
                        android:textColor="@color/colorGray"
                        android:textSize="18sp" />

                    <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="bottom"-->
                    <!--android:singleLine="true"-->
                    <!--android:text="@string/ltrs"-->
                    <!--android:textColor="@color/colorGray"-->
                    <!--android:textSize="13sp" />-->
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="2.5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="9dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="10"
                    android:paddingBottom="6dp"
                    android:paddingStart="6dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="bottom"
                        android:src="@drawable/calendar_icon" />

                    <TextView
                        android:id="@+id/txtVw_fromDate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:gravity="bottom"
                        android:paddingStart="12dp"
                        android:singleLine="true"
                        android:text="25-May-2016"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="10"
                    android:paddingBottom="6dp"
                    android:paddingStart="6dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="bottom"
                        android:src="@drawable/calendar_icon" />

                    <TextView
                        android:id="@+id/txtVw_toDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="bottom"
                        android:paddingStart="12dp"
                        android:singleLine="true"
                        android:text="25-May-2016"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_weight="3.5">

                    <ImageView
                        android:id="@+id/petroleumCompanyImg"
                        android:layout_width="35dp"
                        android:scaleType="fitCenter"
                        android:layout_height="35dp"
                        android:src="@drawable/p1" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>